<div class="wrapper wrapper-form">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h3 class="text-center">Please login to continue</h3>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs form-group text-center">
            <%= f.input :email, required: false, autofocus: true %>
            <%= f.input :password, required: false %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div class="form-actions form-group text-center">
            <%= f.button :submit, "Log in", class: "form-control btn btn-space-pink text-center" %>
          </div>
        <% end %>

        <br>
        <div class="text-center form-devise-links">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
