<div class="home-banner">
  <h1>Explore StarTrip</h1>
  <p>
    <span id="banner-typed-text"></span>
    <%= simple_form_for :query, url: stars_search_path, method: 'get', html: {class: 'form-inline'} do |f| %>
      <%= f.input :constellation, as: :select, collection: @constellation, label: false, input_hmtl: { class:'select2' } %>
      <%= f.button :submit, class: 'btn-warning' %>
    <% end %>
  </p>
</div>

<div class="container">
  <h1 class="text-center">Our selection</h1>
  <div class="row">
    <% @stars.each do |star| %>
        <div class="col-xs-4">
          <%= render 'shared/card', object: star %>
        </div>
    <% end %>
  </div>
</div>





