<%= render 'shared/banner_show' %>

<div class="container">
  <div class="profil">
    <div class="starname">
      <h1><%= @star.name%></h1>
    </div>
    <div class="photo">
      <div class="star-content">
        <%= cl_image_tag("http://res.cloudinary.com/floflow/image/upload/v1526999812/alien1.jpg", width: 70, crop: :fill) %>
        <p><%=@star.user.username%></p>
      </div>
    </div>
    <div class="description">
      <div class="description-content">
        <h3>More about <%= @star.name%> </h3>
        <p><%= @star.description%> </p>
        <p><i class="fas fa-tint"> </i>Water: <%= @star.water%> %</p>
        <p><i class="fas fa-leaf"> </i> Breathability: <%= @star.breathability%> %</p>
        <p><i class="fas fa-star"> </i> Asteroid attack: <%= @star.asteroid_attack%> %</p>
        <p><i class="fas fa-sun"> </i>Daylight: <%= @star.daylight%> %</p>
        <p><i class="fas fa-heart"> </i>Life existence: <%= @star.life_existence%> </p>
      </div>
    </div>
    <div class="form">
      <p> <strong><%=@star.price_per_day%>$</strong> per night</p>
      <div class="formstyle">
      <%= simple_form_for([@star, @booking]) do |t| %>
      <%= t.input :arrival_date, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= t.input :departure_date, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= t.submit class: 'btn btn-primary' %>
      <% end %>
     </div>
    </div>
  </div>
</div>




