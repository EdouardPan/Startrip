<%= render 'shared/banner_show' %>

<div class="container">
  <div class="profil">
    <div class="starname">
      <h1><%= @star.name%></h1>
    </div>
    <div class="photo">
      <div class="stat-content">
        <%= cl_image_tag("http://res.cloudinary.com/floflow/image/upload/v1526999812/alien1.jpg", width: 70, crop: :fill) %>
        <p>name</p>
      </div>
    </div>
    <div class="description">
      <div class="description-content">
        <h3>More about <%= @star.name%> </h3>
        <p><%= @star.description%></p>
      </div>
    </div>
    <div class="form">
      <%= simple_form_for([@star, @booking]) do |t| %>
      <%= t.input :arrival_date %>
      <%= t.input :departure_date %>
      <%= t.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>

