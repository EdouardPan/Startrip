<div class="navbar-wagon navbar-fixed-top navbar-wagon-black">
    <!-- Logo -->
    <%= link_to root_path, class: "navbar-wagon-brand" do %>
      <%= image_tag "logo.png", height: 50 %>
    <% end %>
    <!-- Navbar in lg -->
    <div class="navbar-wagon-right hidden-xs hidden-sm">
      <!-- Avatar with dropdown menu -->
      <% if user_signed_in? %>
          <%= link_to "My bookings", profile_path, class: "navbar-wagon-item navbar-wagon-link" %>
          <%= link_to "My stars", profile_path, class: "navbar-wagon-item navbar-wagon-link" %>
          <div class="navbar-wagon-item">
              <div class="dropdown">
                <%= image_tag "http://placehold.it/30x30", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", data: { toggle: "dropdown"} %>
                <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
                  <li><%= link_to('Logout', destroy_user_session_path, method: :delete) %></li>
                </ul>
              </div>
          </div>
      <% else %>
        <!-- Links -->
        <%= link_to "First-time StarTripper", new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %>
        <%= link_to "Already a StarTripper", new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <% end %>
    </div>
  </div>


  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-right hidden-md hidden-lg">
    <% if user_signed_in? %>
      <div class="dropdown">
        <%= image_tag "http://placehold.it/30x30", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
            <%= link_to "#" do %>
              <i class="fa fa-user"></i> <%= t(".booking", default: "My bookings") %>
            <% end %>
          </li>
          <li>
            <%= link_to "#" do %>
              <i class="fa fa-user"></i> <%= t(".star", default: "My stars") %>
            <% end %>
          </li>
          <li>
            <%= link_to "#" do %>
              <i class="fa fa-cog"></i>  <%= t(".profile", default: "My profile") %>
            <% end %>
          </li>
          <li>
            <%= link_to "#" do %>
              <i class="fa fa-cog"></i>  <%= t(".profile", default: "My profile") %>
            <% end %>
          </li>
        </ul>
      </div>
    <% else %>
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <i class="fab fa-reddit-alien dropdown-toggle" data-toggle="dropdown"></i>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <!-- <li><a href="#">First-time StarTripper</a></li> -->
            <li> <%= link_to "First-time StarTripper", new_user_registration_path %> </li>
            <li> <%= link_to "Already a StarTripper", new_user_session_path %></li>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
</div>

