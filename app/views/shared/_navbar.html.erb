<div class="navbar-wagon navbar-fixed-top">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo.png", height: 50 %>
  <% end %>

  <!-- Navbar in lg -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <!-- Avatar with dropdown menu -->
    <% if user_signed_in? %>
      <div class="navbar-wagon-item">
        <%= link_to "My bookings", "#", class: "navbar-wagon-item navbar-wagon-link" %>
        <%= link_to "My stars", "#", class: "navbar-wagon-item navbar-wagon-link" %>
        <%= link_to "#" do %>
          <%= image_tag "http://placehold.it/30x30", class: "avatar" %>
        <% end %>
      </div>
    <% else %>
      <!-- Links -->
      <%= link_to "Sign in", "#", class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Log in", "#", class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-right hidden-md hidden-lg">
    <% if user_signed_in? %>
      <div class="dropdown">
        <%= image_tag "http://placehold.it/30x30", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
            <%= link_to "#" do %>
              <i class="fa fa-user"></i> <%= t(".booking", default: "My bookings") %>
            <% end %>
          </li>
          <li>
            <%= link_to "#" do %>
              <i class="fa fa-user"></i> <%= t(".star", default: "My stars") %>
            <% end %>
          </li>
          <li>
            <%= link_to "#" do %>
              <i class="fa fa-cog"></i>  <%= t(".profile", default: "My profile") %>
            <% end %>
          </li>
        </ul>
      </div>
    <% else %>
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <i class="fab fa-reddit-alien dropdown-toggle" data-toggle="dropdown"></i>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li><a href="#">Sign in</a></li>
            <li><a href="#">Log in</a></li>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
</div>
